"use client"

import { cn } from "@/lib/utils"

interface MarqueeProps {
  className?: string
  reverse?: boolean
  pauseOnHover?: boolean
  children?: React.ReactNode
  vertical?: boolean
  [key: string]: any
}

export function Marquee({
  className,
  reverse,
  pauseOnHover = false,
  children,
  vertical = false,
  ...props
}: MarqueeProps) {
  return (
    <div
      className={cn(
        "group flex overflow-hidden p-2",
        {
          "flex-row": !vertical,
          "flex-col": vertical,
        },
        className
      )}
      {...props}
    >
      <div
        className={cn("flex shrink-0 justify-around gap-4", {
          "flex-row": !vertical,
          "flex-col": vertical,
          "group-hover:animation-pause": pauseOnHover,
        })}
        style={{
          animation: vertical
            ? `marquee-vertical 20s linear infinite ${reverse ? "reverse" : "normal"}`
            : `marquee 20s linear infinite ${reverse ? "reverse" : "normal"}`
        }}
      >
        {children}
        {children}
        {children}
        {children}
      </div>
    </div>
  )
}