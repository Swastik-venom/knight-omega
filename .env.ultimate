# ============================================
# ULTIMATE ENVIRONMENT CONFIGURATION
# MySQL + Supabase Auth Hybrid Mode
# ============================================




# MySQL Mode
#USE_SQL=true
#USE_SUPABASE_AUTH=false

# Supabase Mode  
#USE_SQL=false
#USE_SUPABASE_AUTH=true

# ============================================
# BASIC CONFIGURATION
# ============================================
# Server port
PORT=3000

# Frontend base URL
FRONTEND_BASE_URL=http://localhost:5173

# Node type (master for main instance)
NODE_TYPE=master

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL Configuration (fallback mode)
SQL_DSN=root:Jeel@6622@tcp(127.0.0.1:3306)/oneapi?parseTime=true
LOG_SQL_DSN=root:Jeel@6622@tcp(127.0.0.1:3306)/logdb?parseTime=true

# SQLite Configuration (alternative)
SQLITE_PATH=/path/to/sqlite.db

# Database connection settings
SQL_MAX_IDLE_CONNS=100
SQL_MAX_OPEN_CONNS=1000
SQL_MAX_LIFETIME=60

# ============================================
# AUTHENTICATION MODE SWITCH
# ============================================
# Set USE_SQL=true for MySQL mode, false for Supabase mode
USE_SQL=true
USE_SUPABASE_AUTH=false

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://zqshwxfjhqclymksonry.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_CONN_STRING=redis://user:password@localhost:6379/0

# ============================================
# CACHE & SYNC CONFIGURATION
# ============================================
# Sync frequency (seconds)
SYNC_FREQUENCY=60

# Memory cache
MEMORY_CACHE_ENABLED=true

# Channel updates
CHANNEL_UPDATE_FREQUENCY=30
BATCH_UPDATE_ENABLED=true
BATCH_UPDATE_INTERVAL=5

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Session secret
SESSION_SECRET=random_string

# ============================================
# DEBUG & MONITORING
# ============================================
# Enable pprof
ENABLE_PPROF=false
DEBUG=false

# ============================================
# API CONFIGURATION
# ============================================
# Request timeout (seconds)
RELAY_TIMEOUT=0
STREAMING_TIMEOUT=120

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# Gemini vision settings
GEMINI_VISION_MAX_IMAGE_NUM=16

# Cohere safety
COHERE_SAFETY_SETTING=NONE

# Media token counting
GET_MEDIA_TOKEN=true
GET_MEDIA_TOKEN_NOT_STREAM=true

# Dify debug mode
DIFY_DEBUG=true

# ============================================
# TASK CONFIGURATION
# ============================================
# Update task
UPDATE_TASK=true

# Channel test frequency (seconds)
CHANNEL_TEST_FREQUENCY=10

# ============================================
# MISC CONFIGURATION
# ============================================
# Generate default token
GENERATE_DEFAULT_TOKEN=false

# ============================================
# CALLBACK URLS
# ============================================
# Supabase Auth Callback
SUPABASE_CALLBACK_URL=https://zqshwxfjhqclymksonry.supabase.co/auth/v1/callback

# ============================================
# HYBRID MODE NOTES
# ============================================
# To switch between MySQL and Supabase:
# 1. Set USE_SQL=true for MySQL mode
# 2. Set USE_SQL=false and USE_SUPABASE_AUTH=true for Supabase mode
# 3. Restart the application after changing modes